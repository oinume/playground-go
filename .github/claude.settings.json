      "Bash(docker:*)",
      "Bash(docker compose:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(gh pr *)",
      "Bash(go build *)",
      "Bash(go env *)",
      "Bash(go test *)",
      "Bash(go tool *)",
      "Bash(go vet *)"
